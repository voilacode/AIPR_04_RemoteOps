<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Create Project</title>
  <meta name="csrf-token" content="<%= csrfToken %>" />
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet" />
</head>
<body class="bg-pink-50">
  <nav class="bg-pink-900 p-4 shadow-md">
    <div class="px-10 mx-auto flex justify-between items-center">
      <h1 class="text-white text-2xl font-semibold">
        <a href="/" class="text-white">RemoteOps</a>
      </h1>
      <div class="flex space-x-4">
        <a href="/" class="text-white text-sm bg-pink-600 duration-300 ease-in-out hover:bg-pink-500 px-4 py-2 rounded">Home</a>
        <a href="/aiapp" class="text-white text-sm bg-pink-600 duration-300 ease-in-out hover:bg-pink-500 px-4 py-2 rounded">AI App</a>
        <a href="/profile" class="text-white text-sm bg-pink-600 duration-300 ease-in-out hover:bg-pink-500 px-4 py-2 rounded">Profile</a>
        <% if (user && user.role !== 'user') { %>
          <a href="/admin" class="text-white text-sm bg-pink-600 duration-300 ease-in-out hover:bg-pink-500 px-4 py-2 rounded">Admin</a>
        <% } %>
        <a href="/logout" class="text-white text-sm bg-pink-600 duration-300 ease-in-out hover:bg-pink-500 px-4 py-2 rounded">Logout</a>
      </div>
    </div>
  </nav>

  <main class="p-6 px-10 mb-20">
    <h1 class="text-3xl font-semibold text-center text-gray-700 mb-8">Create Project</h1>

    <form action="/project/create" method="POST" class="bg-white p-6 rounded-lg shadow-lg max-w-lg mx-auto">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>" />

      <div class="mb-4">
        <label for="title" class="block text-lg font-medium text-pink-800">Project Title</label>
        <input
          type="text"
          id="title"
          name="title"
          placeholder="Project Title"
          required
          class="mt-2 border-2 border-gray-300 p-3 w-full rounded-lg focus:ring-2 focus:ring-pink-500"
        />
      </div>

      <div class="mb-4">
        <label for="description" class="block text-lg font-medium text-pink-800">Project Description</label>
        <textarea
          id="description"
          name="description"
          placeholder="Project Description"
          class="mt-2 border-2 border-gray-300 p-3 w-full rounded-lg focus:ring-2 focus:ring-pink-500"
        ></textarea>
      </div>

      <div class="mb-4">
        <label for="deadline" class="block text-lg font-medium text-pink-800">Project Deadline</label>
        <input
          type="date"
          id="deadline"
          name="deadline"
          required
          class="mt-2 border-2 border-gray-300 p-3 w-full rounded-lg focus:ring-2 focus:ring-pink-500"
        />
      </div>

      <div class="mb-6">
        <label for="project_lead" class="block text-lg font-medium text-pink-800">Project Lead</label>
        <select
          id="project_lead"
          name="project_lead"
          required
          class="mt-2 border-2 border-gray-300 p-3 w-full rounded-lg focus:ring-2 focus:ring-pink-500"
        >
          <% users.forEach(user => { %>
            <option value="<%= user.id %>"><%= user.name %></option>
          <% }); %>
        </select>
      </div>

      <button
        type="submit"
        class="w-full py-3 bg-pink-600 text-white font-semibold rounded-lg hover:bg-pink-700 focus:outline-none focus:ring-2 focus:ring-pink-500 transition-colors"
      >
        Create
      </button>
    </form>
  </main>

  <footer class="bg-pink-900 p-4 shadow-md text-center text-white fixed bottom-0 w-full border-t border-pink-400">
    &#169; RemoteOps
  </footer>
</body>
</html>
